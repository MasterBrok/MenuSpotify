    <DockPanel LastChildFill="false">
        <!--Background Gradient-->
        <DockPanel.Background>
            <LinearGradientBrush>
                <GradientStop Color="{StaticResource bgWindow}"/>
            </LinearGradientBrush>
        </DockPanel.Background>
        <!--Border Main-->
        <Border
            Name="MainBorder"
            DockPanel.Dock="Right"
            CornerRadius="20 2 1 20"
            Background="{StaticResource bgMainMenu}"
            BorderBrush="Black"
            BorderThickness="0.5"
            >
            <!--Animation Open And Close-->
            <Border.Style
                >
                <Style TargetType="Border">
                    <Setter Property="Width" Value="0"/>
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <!--Conditions-->
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding ElementName=chValue,Path=IsChecked}" Value="True"/>
                            </MultiDataTrigger.Conditions>
                            <!--Enter Animation-->
                            <MultiDataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetProperty="Width"
                                            To="220"
                                            />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiDataTrigger.EnterActions>
                            <!--Exit Animation-->
                            <MultiDataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetProperty="Width"
                                            To="0"
                                            />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiDataTrigger.ExitActions>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid>
                <!--Rows-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="48*"/>
                    <RowDefinition Height="52*"/>
                    <RowDefinition Height="74*"/>
                    <RowDefinition Height="425*"/>
                </Grid.RowDefinitions>

